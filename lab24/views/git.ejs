<%- include('partials/head.ejs') %>
<body>
	<div class="card-group">
		<div class="card bg-dark text-white col-sm-12">
		<img src='https://i.pinimg.com/originals/72/91/74/72917400d3c78ec8f959bb968992e86c.jpg' class="card-img" alt="box" height="100%">
		<div class="card-img-overlay">
			<br><br><br><br><br><br><br><br>
			<h1 class="card-title display-1 text-center">BOX</h1>
			<div class="d-grid gap-2 col-6 mx-auto">
				<a class="btn btn-outline-light" href="/boxeadores" title="IR A boxeadores">MEJORES BOXEADORES</a>
			</div>
		</div>
	</div>
	<div class="card bg-dark text-white col-sm-12">
		<img src='https://i.pinimg.com/originals/fe/7e/35/fe7e35edb4bdb36e0d1c1dea20ecf960.jpg' class="card-img" alt="cars" height="100%">
		<div class="card-img-overlay">
			<br><br><br><br><br><br><br><br>
			<h1 class="card-title display-1 text-center">AUTOS</h1>
			<div class="d-grid gap-2 col-6 mx-auto">
				<a class="btn btn-outline-light" href="/autos" title="IR A autos">GIFS</a>
				<a class="btn btn-outline-light" href="/autos/dreamgarage" title="IR A dream garage">DREAM GARAGE</a>
			</div>
		</div>
	</div>
	</div>
	<div class="card bg-dark text-white">
		<img src='https://media.istockphoto.com/videos/white-particles-in-the-ink-video-id844721022?s=640x640' class="card-img" alt="bg" style="height: 230px;">
		<div class="card-img-overlay">
			<br>
			<% if(!isLogged) { %>
				<div class="d-grid gap-2 col-6 mx-auto">
					<a class="mx-auto btn btn-outline-light" href="/users/login" title="Inicia Sesión"><strong>LOG IN</strong></a>
				</div>
			<% } %>
			<% if(isLogged) { %>
				<div class="d-grid gap-2 col-6 mx-auto">
					<a class="mx-auto btn btn-outline-light" href="/users/logout" title="Cerrar Sesión"><strong>LOG OUT</strong></a>
				</div>
			<% } %>
			<br>
			<h1 class="card-title display-6 text-center">BY DIEGO</h1>
		</div>
	</div>
	<footer>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
	</footer>
</body>
</html>